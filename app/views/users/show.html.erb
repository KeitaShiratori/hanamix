<div class="row">
  <div class="col-md-4">
    <%= render 'shared/user_card' %>
  </div>
  <div class="col-md-8">
    <div id="now_on_round">
      <%= render 'shared/now_on_round', round: @now_on_round %>
    </div>
    <div id="round_list">
      <h2>履歴</h2>
      <%= render 'shared/history_list', rounds: @history_list %>
    </div>
