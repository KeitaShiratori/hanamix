<!DOCTYPE html>
<html>
  <head>
    <title>HanaMix</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <!-- google マップ用のjs-->
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
  </head>

  <body data-controller="<%= params[:controller] %>" data-action="<%= params[:action] %>" id="page-top" data-spy="scroll" data-target=".navbar-custom">
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <!--メッセージをふわっと表示して自然に消すjsメソッド-->
        <!--http://alfredobarron.github.io/smoke/#/-->
        <script>
          $.smkAlert({text:'<%= message %>', type:'<%= message_type %>'});
        </script>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>