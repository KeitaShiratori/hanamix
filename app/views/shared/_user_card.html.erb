<% if @user.present? %>
  <% disp_user = @user %>
<% else %>
  <% disp_user = current_user %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="media">
      <a class="media-left" href="#">
        <%= gravatar_for disp_user %>
      </a>
      <div class="media-body">
        <h3 class="media-heading">
          <%= disp_user.name %>
        </h3>
        <% if current_user == disp_user %>
          <h4 class="media-heading">
            <%= link_to "/users/#{current_user.id}/edit" do %>
              <span class="label label-warning glyphicon glyphicon-pencil"> <%= I18n.t("users.side_bar.settings") %></span>
            <% end %>
          </h4>
        <% end %>
      </div>
    </div>
    <ul class="nav nav-pills nav-stacked">
      <% if current_user == disp_user %>
        <li class="sidebar-content"><a><i class="glyphicon glyphicon-envelope"></i> <%= disp_user.email %></a></li>
      <% end %>
      <li class="sidebar-content"><a><i class="glyphicon glyphicon-user"></i> <%= disp_user.description %></a></li>
      <li class="sidebar-content"><a><i class="glyphicon glyphicon-map-marker"></i> <%= disp_user.location %></a></li>
    </ul> 
  </div>
</div>
